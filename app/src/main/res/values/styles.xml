<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text Styles: Paragraph & body -->
    <style name="ParagraphAppTextStyles" >
        <item name="android:fontFamily">@font/sofiapro_light</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="BodyS" parent="ParagraphAppTextStyles">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BodyM" parent="ParagraphAppTextStyles">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="BodyL" parent="ParagraphAppTextStyles">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text Styles: titles -->
    <style name="HeadingsAppTextStyles" >
        <item name="android:fontFamily">@font/sofia_pro_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeadingXXS" parent="HeadingsAppTextStyles">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="HeadingXS" parent="HeadingsAppTextStyles">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="HeadingS" parent="HeadingsAppTextStyles">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="HeadingM" parent="HeadingsAppTextStyles">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="HeadingL" parent="HeadingsAppTextStyles">
        <item name="android:textSize">38sp</item>
    </style>

    <!-- Text Styles: subtitles -->
    <style name="SubtitlessAppTextStyles" >
        <item name="android:fontFamily">@font/sofia_pro_medium</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    <style name="SubtitleXS" parent="SubtitlessAppTextStyles">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SubtitleS" parent="SubtitlessAppTextStyles">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="SubtitleM" parent="SubtitlessAppTextStyles">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SubtitleL" parent="SubtitlessAppTextStyles">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Text Styles: labels -->
    <style name="LabelsAppTextStyles" >
        <item name="android:fontFamily">@font/sofiapro_light</item>
    </style>

    <style name="labelS" parent="LabelsAppTextStyles">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="labelM" parent="LabelsAppTextStyles">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="labelL" parent="LabelsAppTextStyles">
        <item name="android:textSize">12sp</item>
    </style>

</resources>