<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image_feature_recipe"
        android:layout_width="wrap_content"
        android:layout_height="169dp"
        android:layout_margin="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_feature_recipe"
            android:layout_width="300dp"
            android:layout_height="169dp"
            android:background="@drawable/round_shape_medium"
            android:contentDescription="@string/cd_h_imageFeaturedRecipe"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginStart="12dp"
        android:padding="6dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_image_feature_recipe"
        app:layout_constraintStart_toStartOf="@+id/cv_image_feature_recipe"
        app:layout_constraintTop_toBottomOf="@+id/cv_image_feature_recipe">

        <LinearLayout
            android:id="@+id/ll_review_featured_recipes"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_review_featured_recipes"
                style="@style/HeadingXXS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                tools:text="10" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/star_fill"
                android:backgroundTint="@color/warning_main" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name_recipe"
        style="@style/HeadingXS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_image_feature_recipe"
        tools:text="Titulo de la receta" />

    <TextView
        android:id="@+id/tv_pop_ingredients"
        style="@style/SubtitleXS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_recipe"
        tools:text="Ingredientes" />

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/heart"
        android:backgroundTint="@color/dark_gray"
        android:contentDescription="@string/cd_h_buttonaddfavorites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_recipe" />

</androidx.constraintlayout.widget.ConstraintLayout>